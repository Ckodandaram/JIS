            width: 70%;
            background-color: rgba(129, 125, 125, 0.137);
        } */
        span{
            margin:2%;
            color: purple;
            font-family: 'Poppins', sans-serif;
        }

        .cont{
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
            margin-top: 5%;
        }

        i{
            margin-right: 10px;
        }
         
        /* .btn{

            margin: 10px;
        } */
       
        @media only screen and (min-width:600px) and (max-width:670px) {
            .card{
                width:275px;
            }
        }
        @media only screen and (min-width:900px) and (max-width:970px) {
            .card{
                width:275px;
            }
        }
        @media only screen and (min-width:1200px) and (max-width:1270px) {
            .card{
                width:275px;
            }
        }
        @media only screen and (min-width:1500px) and (max-width:1570px) {
            .card{
                width:275px;
            }
        }

        .btne,.btnd{
            width: 100px;
        }

        .btns{
            display: flex;
            justify-content: space-around;
        }
        
    </style>
</head>
