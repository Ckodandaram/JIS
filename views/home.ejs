    <title> Home </title>
    <style>
        .navbar-brand {
            margin-left: 20px;
            margin-top: 2px;
        }

        .nav-item {
            margin: 20px;
            margin-top: 2px;
        }
        .nav-item a{
            font-size: 20px;
            line-height: 1.8125rem;
            letter-spacing: 0.009375rem;
            font-weight: 500;
            font-family: "Merriweather", serif
        }

        /* .footer{
            background-image: linear-gradient(to right,#EE6D98,#8A5EBF);
            position: relative;
            top: 20vh;
            
        } */

        .modal-title{
            font-family: 'Lora', 'sans-serif';
            font-weight:700;
            font-size:1.5rem;
        }

        .card{
            padding: 2%;
            margin-left: auto;
            margin-right: auto;
            margin-top: auto;
            margin-bottom: auto;
            /* border:dashed purple; */
            border: 0.5px solid rgb(232, 228, 228);
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
            width: 500px;
            font-size: 15px;
        }
        .heading {
            text-align: center;
            margin-top: 20px;
            padding: 10px;
            
        }

        .heading h1{
            color: #263F6A; 
            font-family: 'Lora', 'sans-serif';
            font-weight:700;
            font-size:2.5rem;
        }

        .navbar-brand {
            margin-left: 20px;
            margin-top: 0px;
        }

        .nav-item {
            margin: 20px;
            margin-top: 2px;
        }
        .nav-item a{
            font-size: 20px;
            line-height: 1.8125rem;
            letter-spacing: 0.009375rem;
            font-weight: 500;
            font-family: "Merriweather", serif
        }
        .row{
            border: 1px solid black;
            width:400px;
            height:auto;
            background: url('law3.jpg');
            color: white;
            border-radius: 20px;
            box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.75);
            background-size: cover;
            background-position: center;
            overflow: hidden;
            margin: auto;
        }
        .login{
            backdrop-filter: brightness(20%);
        }
        .form{
            display: block;
            box-sizing: border-box;
            padding: 40px;
            width: 100%;
            height: 80%;
            /* backdrop-filter: brightness(40%); */
            flex-direction: column;
            display: flex;
            gap: 5px;
        }
        h1{
            font-weight: normal;
            font-size: 24px;
            text-shadow: 0px 0px 2px rgba(0, 0, 0, 0.5);
            margin-bottom: 60px;
        }
        label{
            color: rgba(255, 255, 255, 0.8);
            text-transform: uppercase;
            font-size: 10px;
            letter-spacing: 2px;
            padding-left: 10px;
            text-align: left;
        }
        input{
            background: rgba(255, 255, 255, 0.3);
            height: 40px;
            line-height: 40px;
            border-radius: 20px;
            padding: 0px 20px;
            border: none;
            margin-bottom: 20px;
            color: white;
        }
        .btn{
            background: #0d6efd;
            height: 40px;
            line-height: 40px;
            border-radius: 40px;
            border: none;
            margin: 10px 0px;
            box-shadow: 0px 0px 5px rgba(255, 255, 255, 0.3);
            color: white;
            font-size: 12px;
            text-transform: uppercase;
        }

        .btn:hover{
            background: #6590d1;
            color: wheat;
        }

        /* input,
        textarea,label {
            padding: 10px;
