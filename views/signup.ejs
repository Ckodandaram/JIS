    <style>
        /* .container {
            padding-top: 2vh;
            align-items: center;
        } */

        .heading {
            text-align: center;
            margin-top: 20px;
            padding: 10px;
            
        }

        .heading h1{
            color: #263F6A; 
            font-family: 'Lora', 'sans-serif';
            font-weight:700;
            font-size:2.5rem;
        }

        .navbar-brand {
            margin-left: 20px;
            margin-top: 0px;
        }

        .nav-item {
            margin: 20px;
            margin-top: 2px;
        }
        .nav-item a{
            font-size: 20px;
            line-height: 1.8125rem;
            letter-spacing: 0.009375rem;
            font-weight: 500;
            font-family: "Merriweather", serif
        }
        .row{
            border: 1px solid black;
            width:400px;
            height:auto;
            background: url('law3.jpg');
            color: white;
            border-radius: 20px;
            box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.75);
            background-size: cover;
            background-position: center;
            overflow: hidden;
            margin: auto;
        }
        .signup{
            backdrop-filter: brightness(70%);
        }
        .form{
            display: block;
            box-sizing: border-box;
            padding: 40px;
            width: 100%;
            height: 80%;
            /* backdrop-filter: brightness(40%); */
            flex-direction: column;
            display: flex;
            gap: 5px;
        }
        h1{
            font-weight: normal;
            font-size: 24px;
            text-shadow: 0px 0px 2px rgba(0, 0, 0, 0.5);
            margin-bottom: 60px;
        }
        label{
            color: rgba(255, 255, 255, 0.8);
            text-transform: uppercase;
            font-size: 10px;
            letter-spacing: 2px;
            padding-left: 10px;
            text-align: left;
        }
        input{
            background: rgba(255, 255, 255, 0.3);
            height: 40px;
            line-height: 40px;
            border-radius: 20px;
            padding: 0px 20px;
            border: none;
            margin-bottom: 20px;
            color: white;
        }
        .btn{
            background: #0d6efd;
            height: 40px;
            line-height: 40px;
            border-radius: 40px;
            border: none;
            margin: 10px 0px;
            box-shadow: 0px 0px 5px rgba(255, 255, 255, 0.3);
            color: white;
            font-size: 12px;
            text-transform: uppercase;
        }

        .btn:hover{
            background: #6590d1;
            color: wheat;
        }
        
        .footer{
            background-image: linear-gradient(to right,#EE6D98,#8A5EBF);
            position: relative;
            top: 20vh;
            
        }
    </style>
</head>



<body>
    <div class="title">

        
        <%- include('partials/signinNavBar.ejs') -%>


        <div class="container" >

            <div class="heading">
                <h1>Judiciary Information System</h1>
            </div>

            <div class="row">
 
                        <div class="signup">
                            <% if(errors) { %>
                            <p style="color:red;"> * <%= errors %> * </p> 
                             <% } %>
                            <form action="/signup" method="POST" class="form">
                                <h1>SIGN UP</h1>
                                <label>Email</label>
                                <input type="email" name="email" id="email">
                                <!-- <br> -->
                                <label>Username</label>
                                <input type="text" name="username" id="username">
                                <!-- <br> -->
                                <label>Secretkey</label>
                                <input type="text" name="secretkey" id="secretkey">
                                <!-- <br> -->
                                <label>Password</label>
                                <input type="password" name="password" id="password">
                                <!-- <br> -->
                                <label>Re-Enter Password</label>
                                <input type="password" name="confirmPassword" id="confirmPassword">
                                
                                <!-- <div class="btns" style="display: flex; flex-direction: row;justify-content: space-around;">     -->
                                <!-- <a href="#"> -->
                                    <button type="submit" class="btn ">Sign Up</button>
                                <!-- </a> -->
                            </form> 
                            <form action="/signin" method="GET"  style="margin: 8% auto; text-align: center;">
                                <!-- <a href="#"> -->
                                    <button type="submit" class="btn " style="width: 80%;">Sign In</button>
                                <!-- </a>                        -->
                            </form>
                        </div>

                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
                    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
                    crossorigin="anonymous"></script>
            </div>
        </div>
    </div>



    <%- include('partials/footer.ejs') -%>
    
</body>



